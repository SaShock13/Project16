<Window x:Class="Homework16.AddPurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework16"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddPurchaseWindow" Height="400" Width="350">
    <Grid DataContext="{Binding NewPurchase}" >
        <Label Name="lblCustomerName" HorizontalAlignment="Center" Content="Данные о покупке" Margin="10,10,10,0" VerticalAlignment="Top" Height="48"/>
        <Button Name="btnBuyOK"  Content="OK" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Bottom" Height="70" Width="70" Click="btnBuyOK_Click" />
        <TextBox Name="tbBuyName" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="204"/>
        <TextBox Name="tbBuyCode" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="{Binding Code}" VerticalAlignment="Top" Width="204"/>
        <Label Content="{Binding CurrentCustomer.Email}" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Width="204" Height="36"/>

    </Grid>
</Window>
